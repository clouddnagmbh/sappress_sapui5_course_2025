<mvc:View controllerName="com.sappress.customerapp.controller.Main"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core">
    <Page id="page" title="My first Page">
        <content>

            <f:SimpleForm id="SimpleFormChange354"
                editable="true"
                layout="ResponsiveGridLayout"
                title="Customer Details"
                labelSpanXL="2"
                labelSpanL="2"
                labelSpanM="4"
                labelSpanS="12"
                adjustLabelSpan="false"
                emptySpanXL="5"
                emptySpanL="5"
                emptySpanM="2"
                emptySpanS="0"
                columnsXL="1"
                columnsL="1"
                columnsM="1"
                singleContainerFullSize="false">
                <f:content>
                    <Label id="customer_label_customerid" text="Customer ID" 
                        labelFor="customer_text_customerid"/>
                    <Input id="customer_text_customerid" value=""/>

                    <Label id="customer_label_firstname" text="Firstname" 
                        labelFor="customer_text_firstname"/>
                    <Input id="customer_text_firstname" value=""/>

                    <Label id="customer_label_lastname" text="Lastname" 
                        labelFor="customer_text_lastname"/>
                    <Input id="customer_text_lastname" value=""/>

                    <Label id="customer_label_title" text="Title" 
                        labelFor="customer_text_title"/>
                    <Input id="customer_text_title" value=""/>

                    <Label id="customer_label_gender" text="Gender" 
                        labelFor="customer_select_gender"/>
                    <Select id="customer_select_gender">
                        <items>
                            <core:Item id="customer_item_female" key="female" text="Female"/>
                            <core:Item id="customer_item_male" key="male" text="Male"/>
                        </items>
                    </Select>

                    <Label id="customer_label_birthdate" text="Birthdate" 
                        labelFor="customer_text_birthdate"/>
                    <DatePicker id="customer_text_birthdate" />

                    <Label id="customer_label_email" text="E-Mail" 
                        labelFor="customer_text_email"/>
                    <Input id="customer_text_email" value=""/>

                    <Label id="customer_label_phone" text="Phone" 
                        labelFor="customer_text_phone"/>
                    <Input id="customer_text_phone" value=""/>

                    <Label id="customer_label_website" text="Website" 
                        labelFor="customer_text_website"/>
                    <Input id="customer_text_website" value=""/>
                </f:content>
            </f:SimpleForm>

            <Button text="Press me" press="onButtonPressed" />

            <!--
            <VBox>

                <Text text="My text is displayed here!"/>
                <Text text="My text is displayed here!"/>
                <Text text="My text is displayed here!"/>
                <Text text="My text is displayed here!"/>
                <Text text="My text is displayed here!"/>
                <Text text="My text is displayed here!"/> 

            </VBox>
        -->

            <!-- <Button type="Accept" icon="sap-icon://" text="Press me!"/> -->

        </content>
    </Page>
</mvc:View>