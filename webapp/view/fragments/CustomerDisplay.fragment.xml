<core:FragmentDefinition
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns:core="sap.ui.core"
    xmlns:u="sap.uxap"
    xmlns:f="sap.ui.layout.form"
    xmlns:s="sap.f.semantic"
    xmlns="sap.m"
>
    <f:SimpleForm
        id="display_simpleform"
        title="{Firstname} {Lastname}"
        editable="true"
    >
        <Label
            id="display_label_customerid"
            text="{i18n>customer.customerid}"
            labelFor="display_text_customerid"
        />
        <Text
            id="display_text_customerid"
            text="{Customerid}"
        />

        <Label
            id="display_label_firstname"
            text="{i18n>customer.firstname}"
            labelFor="display_text_firstname"
        />
        <Text
            id="display_text_firstname"
            text="{Firstname}"
        />

        <Label
            id="display_label_lastname"
            text="{i18n>customer.lastname}"
            labelFor="display_text_lastname"
        />
        <Text
            id="display_text_lastname"
            text="{Lastname}"
        />

        <Label
            id="display_label_title"
            text="{i18n>customer.title}"
            labelFor="display_text_title"
        />
        <Text
            id="display_text_title"
            text="{Title}"
        />

        <Label
            id="display_label_gender"
            text="{i18n>customer.gender}"
            labelFor="display_select_gender"
        />
        <Text
            id="display_select_gender"
            text="{= ${Gender} === '1' ? ${i18n>female} : ${i18n>male} }"
        />

         <Label
            id="display_label_email"
            text="{i18n>customer.email}"
            labelFor="display_text_email"
        />
        <Text
            id="display_text_email"
            text="{Email}"
        />

        <Label
            id="display_label_phone"
            text="{i18n>customer.phone}"
            labelFor="display_text_phone"
        />
        <Text
            id="display_text_phone"
            text="{Phone}"
        />

        <Label
            id="display_label_website"
            text="{i18n>customer.website}"
            labelFor="display_text_website"
        />
        <Text
            id="display_text_website"
            text="{Website}"
        />

         <Label
            id="display_label_birthdate"
            text="{i18n>customer.birthdate}"
            labelFor="display_text_birthdate"
        />
        <Text
             id="display_text_birthdate"
            text="{Birthdate}"
        />
    </f:SimpleForm>
</core:FragmentDefinition>
