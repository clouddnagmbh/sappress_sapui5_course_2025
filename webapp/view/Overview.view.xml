<mvc:View
    controllerName="com.sappress.customerapp.controller.Overview"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns:s="sap.f.semantic"
    xmlns="sap.m"
>
    <s:SemanticPage id="overview_semanticPage">
        <s:titleHeading>
            <Title
                id="overview_title"
                text="{i18n>title}"
            />
        </s:titleHeading>
        <s:content>
            <Table
                id="overview_table"
                headerText="{i18n>overview.table.title}"
                items="{/customers}"
            >
                <columns>
                    <Column id="overview_column_customerid">
                        <Text
                            id="overview_text_customerid"
                            text="{i18n>customer.customerid}"
                        />
                    </Column>
                    <Column id="overview_column_firstname">
                        <Text
                            id="overview_text_firstname"
                            text="{i18n>customer.firstname}"
                        />
                    </Column>
                    <Column id="overview_column_lastname">
                        <Text
                            id="overview_text_lastname"
                            text="{i18n>customer.lastname}"
                        />
                    </Column>
                    <Column
                        id="overview_column_title"
                        minScreenWidth="Desktop"
                    >
                        <Text
                            id="overview_text_title"
                            text="{i18n>customer.title}"
                        />
                    </Column>
                    <Column
                        id="overview_column_gender"
                        minScreenWidth="Desktop"
                    >
                        <Text
                            id="overview_text_gender"
                            text="{i18n>customer.gender}"
                        />
                    </Column>
                    <Column
                        id="overview_column_birthdate"
                        minScreenWidth="Desktop"
                    >
                        <Text
                            id="overview_text_birthdate"
                            text="{i18n>customer.birthdate}"
                        />
                    </Column>
                    <Column
                        id="overview_column_email"
                        minScreenWidth="Desktop"
                    >
                        <Text
                            id="overview_text_email"
                            text="{i18n>customer.email}"
                        />
                    </Column>
                    <Column
                        id="overview_column_phone"
                        minScreenWidth="Desktop"
                    >
                        <Text
                            id="overview_text_phone"
                            text="{i18n>customer.phone}"
                        />
                    </Column>
                    <Column
                        id="overview_column_website"
                        minScreenWidth="Desktop"
                    >
                        <Text
                            id="overview_text_website"
                            text="{i18n>customer.website}"
                        />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem id="overview_columnlistitem" type="Navigation" press="onCustomerPress">
                        <cells>
                            <ObjectIdentifier
                                id="overview_cell_objectidentifier_customerid"
                                title="{Customerid}"
                            />
                            <Text
                                id="overview_cell_text_firstname"
                                text="{Firstname}"
                            />
                            <Text
                                id="overview_cell_text_lastname"
                                text="{Lastname}"
                            />
                            <Text
                                id="overview_cell_text_title"
                                text="{Title}"
                            />
                            <Text
                                id="overview_cell_text_gender"
                                text="{path: 'Gender', formatter: '.formatter.genderFormatter'}"
                            />
                            <Text
                                id="overview_cell_text_birthdate"
                                text="{Birthdate}"
                            />
                            <Text
                                id="overview_cell_text_email"
                                text="{Email}"
                            />
                            <Text
                                id="overview_cell_text_phone"
                                text="{Phone}"
                            />
                            <Link
                                id="overview_cell_link_website"
                                text="{Website}"
                                href="https://{Website}"
                                target="_blank"
                            />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </s:content>
    </s:SemanticPage>
</mvc:View>
