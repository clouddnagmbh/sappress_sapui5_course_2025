<mvc:View
    controllerName="com.sappress.customerapp.controller.Overview"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns:s="sap.f.semantic"
    xmlns="sap.m"
>
    <s:SemanticPage id="main_page">
        <s:titleHeading>
            <Title
                id="main_title"
                text="{i18n>title}"
            />
        </s:titleHeading>
        <s:content>
            <!--<HBox id="main_container">
                <Input
                    id="sample_input"
                    value="{/firstName}"
                    enabled="{/isEditable}"
                />
                <Switch 
                    id="sample_switch"
                    state="{/isEditable}"/>
                <List
                    id="sample_list"
                    items="{/people}">
                    <items>
                        <StandardListItem 
                            id="sample_listitem"
                            title="{firstName}"
                            description="{age}"
                        />
                    </items>

                </List>
            </HBox>-->

            <Table
                id="main_table"
                headerText="{i18n>main.table.title}"
                items="{/customers}"
            >
                <columns>
                    <Column id="main_column_customerid">
                        <Text
                            id="main_text_customerid"
                            text="{i18n>main.customerid}"
                        />
                    </Column>
                    <Column id="main_column_firstname">
                        <Text
                            id="main_text_firstname"
                            text="{i18n>main.firstname}"
                        />
                    </Column>
                    <Column id="main_column_lastname">
                        <Text
                            id="main_text_lastname"
                            text="{i18n>main.lastname}"
                        />
                    </Column>
                    <Column
                        id="main_column_title"
                        minScreenWidth="Desktop"
                    >
                        <Text
                            id="main_text_title"
                            text="{i18n>main.title}"
                        />
                    </Column>
                    <Column
                        id="main_column_gender"
                        minScreenWidth="Desktop"
                    >
                        <Text
                            id="main_text_gender"
                            text="{i18n>main.gender}"
                        />
                    </Column>
                    <Column
                        id="main_column_birthdate"
                        minScreenWidth="Desktop"
                    >
                        <Text
                            id="main_text_birthdate"
                            text="{i18n>main.birthdate}"
                        />
                    </Column>
                    <Column
                        id="main_column_email"
                        minScreenWidth="Desktop"
                    >
                        <Text
                            id="main_text_email"
                            text="{i18n>main.email}"
                        />
                    </Column>
                    <Column
                        id="main_column_phone"
                        minScreenWidth="Desktop"
                    >
                        <Text
                            id="main_text_phone"
                            text="{i18n>main.phone}"
                        />
                    </Column>
                    <Column
                        id="main_column_website"
                        minScreenWidth="Desktop"
                    >
                        <Text
                            id="main_text_website"
                            text="{i18n>main.website}"
                        />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem id="main_column_list">
                        <cells>
                            <ObjectIdentifier
                                id="main_object_identifier"
                                title="{Customerid}"
                            />
                            <Text
                                id="main_cell_item_firstname"
                                text="{Firstname}"
                            />
                            <Text
                                id="main_cell_item_lastname"
                                text="{Lastname}"
                            />
                            <Text
                                id="main_cell_item_title"
                                text="{Title}"
                            />
                            <Text
                                id="main_cell_item_gender"
                                text="{path: 'Gender', formatter: '.formatter.genderFormatter'}"
                            />
                            <Text
                                id="main_cell_item_birthdate"
                                text="{Birthdate}"
                            />
                            <Text
                                id="main_cell_item_email"
                                text="{Email}"
                            />
                            <Text
                                id="main_cell_item_phone"
                                text="{Phone}"
                            />
                            <Link
                                id="main_cell_item_website"
                                text="{Website}"
                                href="https://{Website}"
                                target="_blank"
                            />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </s:content>
    </s:SemanticPage>
</mvc:View>
